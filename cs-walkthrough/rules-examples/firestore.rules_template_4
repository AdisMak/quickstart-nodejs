rules_version = '2';
service cloud.firestore {

  match /databases/{database}/documents {
    match /carts/{cartID} {
      allow create: if request.auth.uid == request.resource.data.ownerUID;
      allow read, update, delete: if request.auth.uid == resource.data.ownerUID;
    }
 
  // Now let's talk about adding items to a cart. We can write a rule that
  // allows access if the current user has the same UID as the ownerUID
  // on the cart document.
  // The 'get' operation in the conditional is reading a value from Firestore
  // - in this case, the ownerUID on the cart document.
  // UNCOMMENT THE FOLLOWING LINES.
  // match /carts/{cartID}/items/{itemID} {
  //   allow write: if 
  //      get(/databases/$(database)/documents/carts/$(cartID))
  //      .data.ownerUID == request.auth.uid;
  // }
  // AND SAVE THE FILE: FILE > SAVE.
 
  match /items/{itemID} {
      allow read; // Users can read items
      // Never do this in production
      allow create;
    }
  }
}
